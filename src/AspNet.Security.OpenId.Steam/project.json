  },

  "dependencies": {
    "AspNet.Security.OpenId": { "target": "project" },
    "JetBrains.Annotations": { "type": "build", "version": "10.1.4" }
  },

  "frameworks": {
    "net451": { },

    "netstandard1.3": {
      "imports": [
        "dotnet5.4",
        "portable-net451+win8"
